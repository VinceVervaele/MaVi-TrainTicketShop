<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trains</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ShoppingCart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trains_FSD.styles.css" asp-append-version="true" />
</head>
<body>

    @await Html.PartialAsync("_Header")

    <div class="container">
        <div class="container-fluid .cartNavButton-container">
            <div class="row">
                <div class="col-md-6">
                    <a class="cartNavButton" id="cartList" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a>
                </div>
                <div class="col-md-6">
                    <a class="cartNavButton" id="cartPersonal" asp-controller="Order" asp-action="GetPersonalOrders">My Orders</a>
                </div>
            </div>
        </div>
        <br />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_Footer")
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
